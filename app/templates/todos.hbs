{{input type="text" id="new-todo" placeholder="What needs to be done?" 
    value=newTitle action="createTodo"}}

<section id="main">
    <ul id="todo-list">
        {{#each item in model itemController="todo"}}
        <li {{bind-attr class="item.isCompleted:completed item.isEditing:editing"}}>
            {{#if item.isEditing}}
                {{input type="text" class="edit" value=item.title focus-out="acceptChanges"
                insert-newline="acceptChanges"}}
            {{else}}
                {{input type="checkbox" checked=item.isCompleted class="toggle"}}
                <label {{action "editTodo" on="doubleClick"}}>{{item.title}}</label><button class="destroy"></button>
            {{/if}}
        </li>
        {{/each}}
    </ul>
 
    <input type="checkbox" id="toggle-all">
</section>
 
<footer id="footer">
    <span id="todo-count">
        <strong>2</strong> todos left
    </span>
    <ul id="filters">
        <li>
            <a href="all" class="selected">All</a>
        </li>
        <li>
            <a href="active">Active</a>
        </li>
        <li>
            <a href="completed">Completed</a>
        </li>
    </ul>
 
    <button id="clear-completed">
        Clear completed (1)
    </button>
</footer>